{% extends 'base.html.twig' %}

{% block title %}- {{ pet.name }}{% endblock %}

{% block body %}
    <h1>{{ pet.name }}</h1>
    <table>
        <tr>
            <td><b>Gender</b></td>
            <td>{{ pet.breed|default("Unknown") }}</td>
        </tr>
        <tr>
            <td><b>Birthday</b></td>
            <td>{{ pet.gender|default("Unknown") }}</td>
        </tr>
        <tr>
            <td><b>Neutered/Spayed</b></td>
            <td>{{ pet.neutered|default("Unknown") }}</td>
        </tr>
        <tr>
            <td><b>Breed</b></td>
            <td>{{ pet.breed|default("Unknown") }}</td>
        </tr>
        <tr>
            <td><b>Weight</b></td>
            <td>{{ pet.weight|default("Unknown") }}</td>
        </tr>
        <tr>
            <td><b>Colour</b></td>
            <td>{{ pet.colour|default("Unknown") }}</td>
        </tr>
    </table>

    <p>{{ pet.description }}</p>
{% endblock %}
